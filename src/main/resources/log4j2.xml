<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="basePath">C:\\Projects\\Git Projects\\one-to-all</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%highlight{[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{2}:%L - %msg%n}"/>
        </Console>
        <RollingFile name="fileLogger" fileName="${basePath}/main_log.log"
                     filePattern="${basePath}/main_log_%d{dd-MM-yyyy}.log">
            <PatternLayout
                    pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{2}:%L - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug" additivity="false">
            <AppenderRef ref="console"/>
        </Root>
        <Logger name="com.app" level="debug" additivity="false">
            <appender-ref ref="fileLogger" level="debug"/>
            <appender-ref ref="console" level="debug"/>
        </Logger>
    </Loggers>
</Configuration>